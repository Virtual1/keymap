@import 'mixins.styl';

aside
	padding 20px
	width 300px
	position fixed
	left 0
	top 0
	z-index 1
	opacity 1
	// background rgba($dpurplish, 1)
	/*box-sizing border-box;
	-moz-box-sizing border-box;*/
	twosecs()
	
aside.inactive
	left 0
	twosecs()
	
.settings
	display block
	width 50px
	height 50px
	position relative
	left 20px
	top -10px
	z-index 4
	background rgba($dpurplish, 1)
	border-radius 0 0 2px 0
	cursor pointer
	
	&:before
		content $settings
		color $green
		font 39px $icons
		position relative
		top 3px
	
.settings.close
	border-radius 3px
	background $purplish
	
.settings.close:hover
	background $dpurplish
	
.settings span
	display block
	text-indent -9999em
	height 0	
	
.settings.close:before
	color rgba(197, 30, 50, 1)
	content $settings-close
	
aside.inactive menu.codetype
	position relative
	margin 0
	left 0
	twosecs()
	
aside menu.codetype
	position relative
	margin 0
	left 0
	twosecs()
	
menu.codetype a
	width 100%
	margin 0 5px 8px 0
	border-radius 3px
	background rgba($green, 0.2)
	padding 7px 15px 7px
	color #FFF
	text-decoration none
	text-transform uppercase
	font-weight 900
	font-size 12px
	text-align center
	display inline
	cursor pointer
	
	&.active
		color rgba(255, 255, 255, 1)
		background rgba($green, 1)
		cursor auto
		
	&:hover
		background rgba($green, 1)
		btn()
		btnhover()
		
	&:active
		btnactive()
		cursor auto
		color rgba(255, 255, 255, 0.16)
		background rgba(0, 0, 0, 0.08)
		
