@import "mixins.styl"

#keyboard
  margin -193px 0 0 -517px
  width 1034px
  height 386px
  position absolute
  top 42%
  left 50%
  opacity 0
  pointer-events none
  twosecs()
  
#keyboard.showing
  opacity .28
  
#keyboard.unicode,
#keyboard.charcode,
#keyboard.entities,
#keyboard.encoded,
#keyboard.ascii
  opacity 1
  pointer-events auto
  
row
  display block
  margin 0 auto
  list-style none
  margin-bottom 6px
  position relative
  
key
  border 2px solid rgba($green, .35)
  border-radius 3px
  background transparent
  font-family Helvetica
  font-weight normal
  font-size 19px
  line-height 26px
  text-align center
  margin 0 2px
  display inline-block
  text-transform uppercase
  position relative
  cursor pointer
  display inline-block
  color $yellow
  
  &:hover
    border 2px solid rgba($green, 1)
    
key.double
  color rgba(255, 255, 255, 0.25)
  
key.double:hover
  color rgba(255, 255, 255, 0.25)
  
key.double.uppercase
  color $yellow
  
key.double.uppercase:hover
  color #fff
  
key.double.uppercase:active,
key.double.uppercase.active
  color rgba(255, 255, 255, 0.25)
  
key.double.uppercase:hover span
  color rgba(255, 255, 255, 0.25)
  
key.double.uppercase span
  color rgba(255, 255, 255, 0.25)
  
key.double span
  color $yellow
  
key.double:hover span
  color #fff
  
key.double.active span,
key.double:active span
  color rgba(255, 255, 255, 0.25)
  
key.deactivated
  top 4px
  keyshadowactive()
  pointer-events: none
    
key.single,
key.tab
  text-transform lowercase
  
key:active,
key.active
  top 1px
  keyshadowactive()
  
key.uppercase
  text-transform uppercase
  
key.tab,
key.shft,
key.caps,
key.delete,
key.return,
key.ctrl,
key.opt,
key.cmd
  font-size 15px
  padding .5em 0
  
row.one key
  padding .2em 0
  width 63px
  font-size 14px
  
key.double
  padding .175em 0
  
row.two .delete
  padding 31px 14px 0
  height 27px
  
row.three .tab,
row.six .ctrl,
row.six .cmd
  padding 28px 14px 0 14px
  height 30px
  
row.six .opt.left
  padding 28px 0px 0 12px
  height 30px
  
row.six .opt.right
  padding 28px 12px 0 0px
  height 30px
  
row.six .space
  padding 28px 6px 0 6px
  height 30px
  top 14px
  width 445px
  
row.six .space.active
  top 15px
  
row.three .lbrack,
row.three .rbrack,
row.three .bs,
row.four .col,
row.five .comm,
row.five .great,
row.five .quest
  padding 0 0 8px 0
  height 50px
  
row.three key.single,
row.four key.single,
row.five key.single
  height 43px
  padding 15px 0 0 0
  top -11px
  
row.three key.single:active,
row.three key.single.active
  top -10px
  
row.one key.single.esc
  font-size 16px
  
row.two key,
row.three key,
row.four key,
row.five key,
row.six key
  width 61px
  height 55px
  padding 3px 0 0 0
  
row.three
  top 1px
  
row.four
  top -15px
  
row.five
  top -25px
  
row.six
  top -49px
  
row.four key.caps,
row.four key.return
  width 83px
  padding 28px 14px 0 14px
  height 30px
  text-transform lowercase
  
row.five key.shft
  width 119px
  padding 28px 14px 0 14px
  height 30px
  text-transform lowercase
  
key span
  display block
  
.left
  text-align left
  
.right
  text-align right
  
row.four key.apos
  line-height 22px
  padding-top 12px
  height 46px
  top 6px
  
row.four key.single:active,
row.five key.single:active,
row.four key.single.active,
row.five key.single.active
  top -10px
  
.cap
  position absolute
  top 16px
  left 11px
  text-indent -9999em
  width 6px
  height 6px
  border-radius 50%
  border 2px solid rgba($green, 0.45)
  cursor pointer
  onesec()
  
.cap:hover,
.cap.capsOn
  background $green
  onesec()
  
.cap.capsOn
  top 18px
  
.caps.activated
  top 2px
  pointer-events none
  keyshadowactive()
  
  span
    pointer-events auto
    
/* ==========================================================================
   DEACTIVATED KEYS BY CODE TYPE
   ========================================================================== */

#keyboard.unicode row.one key,
#keyboard.unicode row.six key,
#keyboard.unicode key.shft,
#keyboard.unicode .caps,
#keyboard.unicode.capslock .tab,
#keyboard.unicode.capslock .return,
#keyboard.unicode.capslock .delete,
#keyboard.encoded key.f1,
#keyboard.encoded key.f2,
#keyboard.encoded key.f3,
#keyboard.encoded key.f4,
#keyboard.encoded key.f5,
#keyboard.encoded key.f6,
#keyboard.encoded key.f7,
#keyboard.encoded key.f8,
#keyboard.encoded key.f9,
#keyboard.encoded key.f10,
#keyboard.encoded key.f11,
#keyboard.encoded key.f12,
#keyboard.encoded key.f13,
#keyboard.encoded .caps,
#keyboard.encoded .shft,
#keyboard.encoded .ctrl,
#keyboard.encoded .opt,
#keyboard.encoded .cmd
  top 2px
  keyshadowactive()
  pointer-events none
/*#keyboard.encoded row.six key.space {
    top 16px;
    @include keyshadowactive;
    pointer-events none;
}*/

#keyboard.unicode row.six key.space
  top 16px
  
/* ==========================================================================
   MEDIA QUERIES
   ========================================================================== */
   
@media screen and (min-width 1025px) and (max-width 1189px)
  #keyboard
    transform scale(0.8)

@media screen and (min-width 1190px) and (max-width 1220px)
  #keyboard
    transform scale(0.94)

@media screen and (min-width 1444px) and (max-width 2010px)
  #keyboard
    transform scale(1.18)

@media screen and (min-width 1444px) and (max-width 2010px)
  #keyboard
    transform scale(1.18)

@media screen and (min-width 2010px) and (max-width 2560px)
  #keyboard
    transform scale(1.75)