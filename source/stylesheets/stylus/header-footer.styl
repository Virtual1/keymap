@import "mixins.styl"

header, footer
  width 100%
  text-align center
  margin 0
  
header
  padding 30px 0 0
        
header h1, header h2
  color $dblue
  
header h1
  font-size 26px
  margin-bottom 5px
  
header h2
  font-size 16px
  margin-top 0
  
footer
  position fixed
  bottom 80px
  width 100%
  
  p.best
    color rgba(255,255,255,.35)
    font-weight 900
    
    a
      color $green
  
.copyright p
  background rgba($dpurplish, 1)
  border-radius 3px 0 0 0
  padding 3px 9px 5px
  font-weight 500
  position fixed
  right 20px
  bottom 20px
  color $green
  margin 0
  text-align center

  a
    color $green
    text-decoration none

  &:hover
    color $yellow