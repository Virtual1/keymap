@import "mixins.styl"

header, footer
  width 100%
  text-align center
  margin 0
  
header
  padding 30px 0 0
  
  .theme-switcher
    background rgba($dpurplish, 1)
    color $green
    position fixed
    top 20px
    right 20px
    z-index 1
    margin 0
    font-weight 500
    border-radius 0 0 0 3px
    padding 3px 9px 5px
    text-transform lowercase
    
    a
      color $green
      text-decoration none
      padding 0 5px
      
      &hover
        color $yellow
        
header h1, header h2
  color $dblue
  
header h1
  font-size 26px
  margin-bottom 5px
  
header h2
  font-size 16px
  margin-top 0
  
footer
  position fixed
  bottom 80px
  width 100%
  
footer p.best
  color $gray
  
  a
    color $green
    
    &hover
      color $yellow
  
.copyright p
  background rgba($dpurplish, 1)
  border-radius 3px 0 0 0
  padding 3px 9px 5px
  font-weight 500
  position fixed
  right 20px
  bottom 20px
  color $green
  margin 0
  text-align center

  a
    color $green
    text-decoration none

  &:hover
    color $yellow